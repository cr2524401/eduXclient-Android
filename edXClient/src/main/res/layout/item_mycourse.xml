<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/holder"
    android:layout_height="192dp">

    <ImageView
        android:id="@+id/item_mycourse_image"
        android:layout_width="match_parent"
        android:layout_height="172.0dip"
        android:layout_marginBottom="20.0dip"
        android:scaleType="centerCrop"
        android:src="@drawable/course_place" />

    <RelativeLayout
        android:id="@+id/item_mycourse_bottom"
        android:background="@color/md_white_1000"
        android:paddingLeft="10.0dip"
        android:paddingTop="20.0dip"
        android:paddingRight="10.0dip"
        android:paddingBottom="10.0dip"
        android:layout_width="fill_parent"
        android:layout_height="86.0dip"
        android:layout_marginTop="106dp">


        <TextView
            android:textSize="16.0sp"
            android:textColor="@color/md_deep_orange_600"
            android:id="@+id/item_mycourse_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10.0dip"
            android:drawableLeft="@drawable/ic_mini_videored"
            android:text="更新至第八周"
            android:drawablePadding="10.0dip"/>
        <TextView
            android:textSize="16.0sp"
            android:textColor="@color/md_grey_500"
            android:id="@+id/time_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10.0dip"
            android:text="2014-9-4开始"
            android:layout_below="@id/item_mycourse_title"
            android:drawablePadding="10.0dip"/>
        <TextView
            android:textSize="16.0sp"
            android:textColor="@color/md_grey_500"
            android:id="@+id/time_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10.0dip"
            android:text="2014-9-4结束"
            android:layout_below="@id/item_mycourse_title"
            android:drawablePadding="10.0dip"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <com.hcjcch.edx.ui.CircleImageView
        android:id="@+id/item_mycourse_teacher_image"
        android:layout_width="32.0dip"
        android:layout_height="32.0dip"
        android:src="@drawable/teacher"
        android:scaleType="centerCrop"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="10dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:textColor="@color/md_white_1000"
        android:text="计算机网络概论"
        android:padding="8dp"
        />
</FrameLayout>
