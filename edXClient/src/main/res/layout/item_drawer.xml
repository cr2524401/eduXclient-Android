<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/drawable_bg_list"
    android:orientation="vertical"
    android:paddingBottom="@dimen/padding_xlarge_16"
    android:paddingLeft="@dimen/padding_xlarge_16"
    android:paddingRight="@dimen/padding_xlarge_16"
    android:paddingTop="@dimen/padding_xlarge_16" >

    <ImageView
        android:id="@+id/item_drawer_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_nav_mycourse" />

    <TextView
        android:id="@+id/item_drawer_textview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin_medium_10"
        android:layout_marginRight="@dimen/margin_medium_10"
        android:layout_toRightOf="@id/item_drawer_icon"
        android:ellipsize="end"
        android:singleLine="true"
        style="@style/Zhihu.TextAppearance.Title.Main.Large"/>

</RelativeLayout>